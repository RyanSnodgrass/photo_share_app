%nav.row
  .large-12.columns
    %h2 New Events
    %ul.button-group.radius.even-4
      %li
        %a.button{href: "/"} Home
      %li
        %a.button{href: "/photos"} Photos
      %li
        %a.button{href: "/events"} Events
      %li
        %a.button{href: "/tags"} Tags
= form_for @new_event do |e|
	= e.label :name
	= e.text_field :name

	= e.label :location
	= e.text_field :location

	= e.label :date
	= e.date_select :date

	= e.submit "Submit"	