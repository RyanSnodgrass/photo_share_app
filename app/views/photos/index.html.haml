%nav.row
	.large-12.columns
		%h2 Photos Index
		%ul.button-group.radius.even-4
			%li
				%a.button{href: "/"} Home
			%li
				%a.button{href: "/photos"} Photos
			%li
				%a.button{href: "/events"} Events
			%li
				%a.button{href: "/tags"} Tags
.row
	.small-4.large-4.columns
		- @pics.each do |p|
			= image_tag p.photo_share.url
			= link_to "Show", photo_path(p)
			/ = link_to "Delete", photo_path(p), method => :delete
			%br
	.small-4.large-4.columns
		= link_to "New Photo", new_photo_path